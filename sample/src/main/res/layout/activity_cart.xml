<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_empty_cart"
        style="@style/PriceBlueTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/empty_cart"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/ll_cart_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ListView
            android:id="@+id/lv_cart_items"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout style="@style/PriceBottomLayer">

            <TextView
                android:id="@+id/tv_total_price"
                style="@style/PriceWhiteTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_regular"
                tools:text="20 ла" />

            <include
                android:id="@+id/btn_google_pay"
                layout="@layout/googlepay_button_white"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/btn_pay"
                style="@style/WhiteButton"
                android:text="@string/pay" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>